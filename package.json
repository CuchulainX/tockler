{
  "name": "backer-timetracker",
  "version": "1.0.9",
  "description": "Track your time by monitoring your active windows and idle time",
  "main": "app/app.js",
  "scripts": {
    "test": "echo \"Please use gulp instead.\" && exit 1"
  },
  "author": "Maigo Erit <maigo.erit@gmail.com>",
  "devDependencies": {
    "electron-connect": "0.4.2",
    "electron-prebuilt": "^1.1.0",
    "electron-rebuild": "^1.1.4",
    "electron-builder": "^3.25.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^2.0.3",
    "node-gyp": "^3.3.1"
  },
  "build": {
    "app-bundle-id": "backer-timetracker",
    "app-category-type": "public.app-category.productivity",
    "iconUrl": "shared/img/icon/timetracker_icon.ico",
    "asar": false,
    "osx": {
      "title": "Backer Timetracker",
      "icon": "shared/img/icon/timetracker_icon.icns",
      "icon-size": 40,
      "contents": [
        {
          "x": 438,
          "y": 144,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 144,
          "type": "file"
        }
      ]
    },
    "win": {
      "title": "Backer Timetracker",
      "icon": "shared/img/icon/timetracker_icon.ico"
    },
    "linux": {
      "arch": 64,
      "target": "deb",
      "version": "0.1.2",
      "title": "Backer Timetracker",
      "comment": "This is a comment",
      "executable": "electron-builder-example",
      "maintainer": "Dummy Maintainer <dummy@maintainer.org>"
    }
  }
}
